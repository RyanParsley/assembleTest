<!DOCTYPE html>
<html lang="en">
  <head>
    {{> head }}
  </head>
  <body>
    {{#if production}}
      {{> tags }} {{! Google Tags. See https://www.google.com/tagmanager/}}
    {{/if}}

    <!-- Navigation component -->
    {{> nav-main }}

    <!-- Subhead component -->
    {{> subhead }}

    <!-- Belt component -->
